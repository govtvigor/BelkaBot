{
  "builds": [
    {
      "src": "package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "src/server/index.ts",
      "use": "@vercel/node"
    }
  ],
  "env": {
    "TELEGRAM_BOT_TOKEN": "@TELEGRAM_BOT_TOKEN"
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/src/server/index.ts" }
  ]
}
